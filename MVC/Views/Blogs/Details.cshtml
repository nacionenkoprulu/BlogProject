@model BlogModel
@*Generated by ScaffoldApp.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Blog</h4>
    <hr />
    <dl class="row">
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.ImageURL)
        </dt>
        <dd class="col-10">
            <div class="col-8">
            <img src="@Model.ImageSrcDisplay" style="height:auto; max-width: 50%; vertical-align:middle; object-fit: cover; width:1280px; aspect-ratio:auto 1280/720;" class="img-fluid" alt="BlogImage">
            </div>
        </dd>

        <dt class="col-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.CreateDateDisplay)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.CreateDateDisplay)
        </dd>
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.UpdateDateDisplay)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.UpdateDateDisplay)
        </dd>
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.Score)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.Score)
        </dd>
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.UserNameDisplay)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.UserNameDisplay)
        </dd>
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.TagsDisplay)
        </dt>
        <dd class="col-10">

            @{
                string sperator = "<br />";
                string tags = "";
                foreach(var tag in Model.TagsDisplay)
                {
                    tags += tag.Name + sperator;
                }

                tags = tags.TrimEnd(sperator.ToCharArray());
            }

            @Html.Raw(tags)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>&nbsp;|&nbsp;
    <a asp-action="Index">Back to List</a>
</div>



