@model BlogModel
@*Generated by ScaffoldApp.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Edit";
}

<h1>@ViewData["Title"]</h1>

<h4>Blog</h4>
<hr />
<div class="row">
    <div class="col-12">
		<form asp-action="Edit" enctype="multipart/form-data">
		@Html.AntiForgeryToken()
			<div asp-validation-summary="All" class="text-danger"></div>
			@if (Model.ImageSrcDisplay != "/Images/BlogImages/")
			{
				<div class="row mb-3">
					<div class="col-10 offset-2">
						<div style="height:auto; max-width: 49%; max-height:50%; vertical-align:middle; object-fit: cover; width:1280px; aspect-ratio:auto 1280/720;">
							<img src="@Model.ImageSrcDisplay" class="img-fluid" alt="BlogImage">
						</div>
					</div>
				</div>
			}
			<div class="row mb-3">
				<label asp-for="Image" class="col-2 col-form-laber"></label>
				@if (Model.ImageSrcDisplay != "/Images/BlogImages/")
				{
					<div class="col-1">
						<a asp-action="DeleteImage" asp-route-blogId="@Model.Id" class="btn btn-danger" id="clrBtn">Img Clear</a>
					</div>
				}
				<div class="col-4">
					<input id="img" type="file" name="image" class="form-control" accept="" />
				</div>
			</div>
			
			@if (User.IsInRole("Admin")) //Sadece admin score değerini değiştirebilir.
			{
				<div class="row mb-3">
					<label asp-for="Score" class="col-2 col-form-label"></label>
					<div class="col-5">
						<input asp-for="Score" class="form-control" />
						<span asp-validation-for="Score" class="text-danger"></span>
					</div>
				</div>
			}

            <div class="row mb-3">
                <label asp-for="Title" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="Title" class="form-control" />
					<span asp-validation-for="Title" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="Content" class="col-2 col-form-label"></label>
				<div class="col-5">
					<textarea asp-for="Content" class="form-control" rows="3"> </textarea>
					<span asp-validation-for="Content" class="text-danger"></span>
				</div>
            </div>
			

			<div class="row mb-3">
				<label asp-for="TagIds" class="col-2 col-form-label"></label>
				<div class="col-5">
					<select multiple asp-for="TagIds" class="form-select" asp-items="ViewBag.Tags">
					</select>
					<span asp-validation-for="TagIds" class="text-danger"></span>
				</div>
			</div>

			<input type="hidden" asp-for="UserId" />
			<input type="hidden" asp-for="Id" />

            <div class="row mb-3">
				<div class="offset-2 col-5">
					<input type="submit" value="Save" class="btn btn-primary" />
					&nbsp;&nbsp;
                    <button type="reset" class="btn btn-outline-primary">Reset</button>
					&nbsp;&nbsp;
					<a asp-action="Index">Back to Blog List</a>
				</div>
            </div>
        </form>
    </div>
</div>

@section Scripts{


	<script>

		$(function () {
			$("#clrBtn").click(function () {
				$("#img").empty();
			});
		});

		
	</script>
	



}



