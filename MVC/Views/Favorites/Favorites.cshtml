@model IEnumerable<FavoriteModel>
@*Generated by ScaffoldApp.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Favorite List";
}

<h1>@ViewData["Title"]</h1>

@if(Model is not null && Model.Count()>0)
{
    string favoritesCount = Model.Count() == 1 ? "Only 1 favorite found" : Model.Count() + " Favorites found!";
    
    <div class="row g-0">
        <div class="alert alert-success col-6" role="alert">
            @favoritesCount
        </div>

        <div class="col-6 text-end">

            <a type="button" class="btn btn-success" asp-action="ClearFavorites" asp-controller="Favorites"><i class="bi bi-recycle"></i> Clear</a>

        </div>



    </div>


    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.BlogTitle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BlogScore)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BlogTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BlogScore)
                    </td>
                    <td>
                        <a asp-action="RemoveFromFavorites" asp-controller="Favorites" asp-route-blogId="@item.BlogId" asp-route-userId="@item.UserId"><i class="bi bi-trash3"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-danger" role="alert">
        Favorites not found!
    </div>
}








