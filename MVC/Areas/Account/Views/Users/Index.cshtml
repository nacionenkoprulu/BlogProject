@model IEnumerable<UserModel>
@*Generated by ScaffoldApp.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Users List";
}

<h1>@ViewData["Title"]</h1>

@* <p>
    <a asp-action="Create">Create New</a>
</p> *@

@if(Model is not null && Model.Count()>0)
{
    string usersCount = Model.Count() == 1 ? "Only 1 user found" : Model.Count() + " users found";
    
    <div class="row g-0">
        <div class="alert alert-success col-6" role="alert">
            @usersCount
        </div>
    </div>
}


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserDetail.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
		@foreach (var item in Model) {
				<tr>
					<td>
                        <a asp-action="Details" asp-route-userId="@item.Id">
                            @Html.DisplayFor(modelItem => item.UserName)
                        </a>
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.UserDetail.Email)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.IsActive)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Role.Name)
					</td>
					<td>
                        <a asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
					</td>
				</tr>
		}
    </tbody>
</table>



